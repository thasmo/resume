---
import Layout from '../layouts/default.astro';
import Contact from '../components/resume/contact.astro';
import Button from '../components/common/button.astro';

const {
	contact,
	profiles,
} = await fetch('https://api.thasmo.com/').then((response) => response.json());
---
<Layout title="&laquo; undefined &raquo;">
	<div class="flex flex-col gap-5rem">
		<div class="flex flex-col gap-2rem">
			<p class="text-1.25rem text-gray-600">
				Oops, we've found a &laquo;page&raquo; that doesn't exist.
			</p>

			<p>
				<Button href="/">
					Bring me home.
				</Button>
			</p>
		</div>
	</div>

	<Fragment slot="aside">
		<div class="flex flex-col gap-1.5rem">
			<Contact contact={contact} profiles={profiles} />
		</div>
	</Fragment>
</Layout>
