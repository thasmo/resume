---
import { type Language } from '../../types';
import { useMessages } from '../../utilities/localization';
import Section from '../common/section.astro';

interface Properties {
	languages: Language[];
}

const { languages } = Astro.props as Properties;
const locale = Astro.currentLocale;

const m = useMessages(locale);
---
<Section id="languages" title={m('section_languages')}>
	<div class="flex flex-row gap-5rem">
		{languages.map((language) => (
			<div class="flex flex-col gap-0">
				<p class="text-1.5rem font-500 text-gray-800 dark:(text-gray-200)">
					{language.name}
				</p>

				<p class="text-1.25rem text-gray-600 dark:(text-gray-300)">
					{language.level}
				</p>
			</div>
		))}
	</div>
</Section>
