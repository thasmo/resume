---
import { type Language } from '../../types';

interface Props {
	languages: Language[];
}

const { languages } = Astro.props as Props;
---
<section class="flex flex-col gap-2.5rem">
	<h2 class="flex flex-row items-center gap-1em font-serif font-500 text-2.25rem">
		<span class="min-w-fit">Languages</span>
		<span class="w-full h-3px bg-current grow-1 rounded-full"></span>
	</h2>

	<div class="flex flex-row gap-5rem">
		{languages.map((language) => (
			<div class="flex flex-col gap-0">
				<p class="text-1.5rem font-500 text-gray-800 dark:(text-gray-200)">
					{language.name}
				</p>

				<p class="text-1.25rem text-gray-600 dark:(text-gray-300)">
					{language.level}
				</p>
			</div>
		))}
	</div>
</section>
