---
import { useMessages } from '../../utilities/localization';
import Section from '../common/section.astro';

interface Properties {
	skills: string[];
	class?: string;
}

const { skills, class: classes } = Astro.props as Properties;
const locale = Astro.currentLocale;

const m = useMessages(locale);
---
<Section id="skills" title={m('section_skills')} class={classes}>
	<div class="gap-0.5rem grid grid-cols-1 print:(flex flex-row flex-wrap gap-0.5rem) sm:(grid-cols-2)">
		{skills.map(skill => (
			<div class="text-1.25rem text-gray-600 p-0.75rem text-center rounded-0.25rem bg-gray-200 capitalize print:(text-1rem px-0.75em py-0.125em rounded-0.25em bg-gray-200) dark:(text-gray-300 bg-gray-800)">
				{skill}
			</div>
		))}
	</div>
</Section>
