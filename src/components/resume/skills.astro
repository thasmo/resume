---
import { useMessages } from '../../utilities/localization';
import Section from '../common/section.astro';

interface Properties {
	skills: string[];
}

const { skills } = Astro.props as Properties;
const locale = Astro.currentLocale;

const m = useMessages(locale);
---
<Section id="skills" title={m('section_skills')}>
	<div class="grid grid-cols-1 gap-0.5rem sm:(grid-cols-2)">
		{skills.map((skill) => (
			<div class="p-0.75rem bg-gray-200 dark:(bg-gray-800 text-gray-300) rounded-0.25rem text-1.25rem text-center text-gray-600 capitalize">
				{skill}
			</div>
		))}
	</div>
</Section>
