---
import { useMessages } from '../../utilities/localization';
import Section from '../common/section.astro';

interface Properties {
	interests: string[];
}

const { interests } = Astro.props as Properties;
const locale = Astro.currentLocale;

const m = useMessages(locale);
---
<Section id="interests" title={m('section_interests')}>
	<div class="grid grid-cols-1 gap-0.5rem sm:(grid-cols-2)">
		{interests.map((interest) => (
			<div class="text-1.25rem p-0.75rem bg-gray-200 dark:(bg-gray-800 text-gray-300) rounded-0.25rem text-center text-gray-600 capitalize">
				{interest}
			</div>
		))}
	</div>
</Section>
