---
import Scroll from './scroll.astro';
import Theme from './theme.astro';

const classes = [
	'p-1rem',
	'bg-gray-100',
	'cursor-default',
	'selection:(bg-gray-900 text-white)',
	'sm:(p-2.5vw)',
	'print:(bg-white)',
	'dark:(text-gray-100 bg-gray-900 selection:(text-gray-900 bg-white) print:(bg-white))',
];
---
<body class:list={classes}>
	<slot />
	<Theme />
	<Scroll />
</body>
